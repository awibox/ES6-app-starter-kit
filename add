#!/bin/bash

mkdir source/blocks/$1;

for i in ${@:2}
do
    mkdir source/blocks/$1;
    if [ $i == "js" ] || [ $i == "less" ];then
        touch source/blocks/$1/$1.$i
    fi
done

if [ !$2 ];then
    for i in js less
    do
        mkdir source/blocks/$1
        if [ $i != "img" ];then
            touch source/blocks/$1/$1.$i
        fi
    done
fi

gulp