<div class="news {{modificator}}">
    <div class="page-header">
        <h2>{{title}}</h2>
    </div>
    <div class="news__items">
        {{#each items}}
            <div class="news__item {{modificator}}">
                <div class="news__img {{imgClass}}"></div>
                <h3>{{name}}</h3>
                <div class="news__item-text">
                    {{text}}
                </div>
                {{#if url}}<a class="btn btn_primary" href="{{url}}" role="button">Подробнее »</a>{{/if}}
            </div>
        {{/each}}
    </div>
</div>
